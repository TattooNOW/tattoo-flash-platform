    },
    {
      "name": "Blog Post URL",
      "type": "url",
      "autoPopulated": true,
      "description": "Auto-populated after blog publishing"
    },
    {
      "name": "YouTube URL",
      "type": "url",
      "autoPopulated": true,
      "description": "Auto-populated after YouTube upload"
    },
    {
      "name": "Affiliate Folder Link",
      "type": "url",
      "description": "Link to cross-promo assets in Google Drive"
    }
