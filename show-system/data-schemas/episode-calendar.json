    {
      "name": "Talent Source Event",
      "type": "dropdown",
      "options": [
        "Icons & Prodigies",
        "Paradise Gathering",
        "Partner Convention",
        "Independent"
      ],
      "description": "Where the talent was sourced from"
    },
    {
      "name": "Sponsor/Partner",
      "type": "text",
      "description": "Episode sponsor if applicable"
    },
    {
