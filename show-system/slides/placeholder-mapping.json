{
  "description": "Maps data sources to Google Slides placeholders. Used by n8n episode-setup workflow to populate slide decks.",
  "placeholders": {
    "{{EPISODE_NUMBER}}": {
      "source": "Episode Calendar",
      "column": "Episode #",
      "type": "text"
    },
    "{{EPISODE_TITLE}}": {
      "source": "Episode Calendar",
      "column": "Episode Title",
      "type": "text"
    },
    "{{AIR_DATE}}": {
      "source": "Episode Calendar",
      "column": "Air Date",
      "type": "date",
      "format": "MMMM D, YYYY"
    },
    "{{GUEST_NAME}}": {
      "source": "Talent Database",
      "column": "Artist Name",
      "type": "text"
    },
    "{{GUEST_HEADSHOT}}": {
      "source": "Talent Database",
      "column": "Headshot URL",
      "type": "image",
      "notes": "Inserted via Slides API replaceAllShapesWithImage request"
    },
    "{{GUEST_BIO}}": {
      "source": "Talent Database",
      "column": "Bio (Short)",
      "type": "text"
    },
    "{{GUEST_STYLE}}": {
      "source": "Talent Database",
      "column": "Style/Specialty",
      "type": "text"
    },
    "{{GUEST_SINCE}}": {
      "source": "Talent Database",
      "column": "Year Started Tattooing",
      "type": "number"
    },
    "{{GUEST_STUDIO}}": {
      "source": "Talent Database",
      "column": "Studio Name",
      "type": "text"
    },
    "{{GUEST_LOCATION}}": {
      "source": "Talent Database",
      "column": "Studio Location",
      "type": "text"
    },
    "{{THEME}}": {
      "source": "Episode Calendar",
      "column": "Theme/Topic",
      "type": "text"
    },
    "{{TALKING_POINTS}}": {
      "source": "Episode Calendar",
      "column": "Key Talking Points",
      "type": "text",
      "format": "Convert newlines to bullet points"
    },
    "{{QA_TOPIC}}": {
      "source": "Episode Calendar",
      "column": "Q&A Topic",
      "type": "text"
    },
    "{{CTA}}": {
      "source": "Episode Calendar",
      "column": "Call to Action",
      "type": "text"
    },
    "{{SOURCE_PRESENTATION}}": {
      "source": "Episode Calendar",
      "column": "Presentation Source",
      "type": "text"
    },
    "{{SOURCE_SLIDE}}": {
      "source": "Episode Calendar",
      "column": "Source Slide(s)",
      "type": "text"
    },
    "{{SPONSOR}}": {
      "source": "Episode Calendar",
      "column": "Sponsor/Partner",
      "type": "text"
    },
    "{{NEXT_TITLE}}": {
      "source": "Episode Calendar (next row)",
      "column": "Episode Title",
      "type": "text"
    },
    "{{NEXT_GUEST}}": {
      "source": "Episode Calendar (next row)",
      "column": "Guest Artist",
      "type": "text"
    },
    "{{AFFILIATE_LINKS}}": {
      "source": "Affiliate Partners",
      "filter": "Active = true",
      "type": "computed",
      "notes": "Generated by joining all active partners' Cross-Promo Links"
    },
    "{{PARTNER_LOGOS}}": {
      "source": "Affiliate Partners",
      "filter": "Active = true",
      "column": "Logo URL",
      "type": "image-array",
      "notes": "Grid of partner logos for the Partner Spotlights slide"
    }
  }
}
